<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %>
  </div>

  <div class="field">
    <%= f.label "(姓)" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label "(名)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %><br>
  </div>

  <div class="field">
    <%= f.label "(セイ)" %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label "(メイ)" %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br>
    <%= f.text_field :adsress %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label "パスワード(6文字以上)" %><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :encrypted_password, autocomplete: "encrypted-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br>
    <%= f.password_field :encrypted_password_confirmation, autocomplete: "encrypted-password_confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

  <h2>既に登録済みの方</h2>

  <%= render "public/shared/links" %>
