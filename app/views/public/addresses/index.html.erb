
  <h2>配送先登録/一覧</h2>

    <%= render 'addresses/error', address: @address %>

      <%= form_with model:@address,url:public_addresses_path do |f| %>

        
            <%= f.label :"郵便番号（ハイフンなし）" %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :postcode, class: "col-xs-6" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3">
            <%= f.label :"住所" %>
          </div>
          <div class="col-lg-4">
            <%= f.text_field :city, class: "col-xs-12" %>
          </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
                <%= f.label :"宛名" %>
            </div>
            <div class="col-lg-4">
                <%= f.text_field :name, class: "col-xs-6" %>
            </div>
            <div class="col-lg-4">
              <%= f.submit '登録する',class: "btn col-xs-5 btn-success" %>
            </div>
        </div>

        <% end %>
