
  <h2>配送先登録/一覧</h2>

    <%= render 'public/addresses/error', address: @address %>

      <%= form_with model: @address, url: public_addresses_path do |f| %>

        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %><br>
          <%= f.text_field :postcode %>
        </div>


          <div class="field">
            <%= f.label :"住所" %><br>
            <%= f.text_field :address %>
          </div>


          <div class="field">
            <%= f.label :"宛名" %>
            <%= f.text_field :name %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        <div class="row address-lists">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
