<h1>注文情報確認</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th><br></th>
        </tr>
    </thead>
    <tbody>
        
    <% @orders.each do |order| %>
    
        <tr>
            <td>
                <%= image_tag order.cart_item.item.get_image(50,50) %>
                <%= order.cart_item.item.name %>
            </td>
            <td>
                <%= order.cart_item.item.with_tax_price %>
            </td>
            <td>
                <%= order.cart_item.amount %>
            </td>
            <td>
                <%= order.cart_item.subtotal %>
            </td>
        </tr>
        
        <% @total += order.cart_item.subtotal %>
        
    <% end %>
        
    </tbody>
</table>

<table class="table table-bordered">
    <tr>
        <td>送料</td>
        <td>
            <% @order.shipping_fee = 800 %>
            <%= @order.shipping_fee %>
        </td>
    </tr>
    <tr>
        <td>商品合計</td>
        <td><%= @total %></td>
    </tr>
    <tr>
        <td>請求金額</td>
        <td><%= @total + @order.shipping_fee %></td>
    </tr>
</table>

<h2>支払い方法</h2>　<%= @order.payment_option_i18n %>

<h2>お届け先</h2>　〒<%= @order.postcode %>　<%=@order.address %></br>
                    <%= @order.name %>
                    
<%= link_to '注文を確定する', public_orders_thanks_path, class: 'btn btn-success' %>

