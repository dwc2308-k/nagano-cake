<h2>注文情報入力</h2>

<%= form_with model: @order, url: public_orders_new_path, local: true do |f| %>

<h4><strong>支払い方法</strong></h4>
 <%= f.radio_button :payment_option, "クレジッドカード", checked: true %>
 <%= f.label :payment_option, "クレジットカード" %>
 

<%= f.radio_button :payment_option, "銀行振込" %>
 <%= f.label :payment_option, "銀行振込" %>

<h4><strong>お届け先</strong></h4>
<%= radio_button :address, 0, checked: true %>
<%= f.label :address, "ご自身の住所" %>

<%= @customer.postcode %>
<%= @customer.address %><br>
<%= @customer.last_name %><%= @customer.first_name %>


<%= f.radio_button :address, 1 %>
<%= f.label :address,"登録済住所から選択" %>

<%= f.radio_button :address, 2 %>
<%= f.label :address, "新しいお届け" %>


<tr>
    <td>郵便番号（ハイフンなし）</td>
    <td><%= f.text_field :postcode %></td>
</tr>

<tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
</tr>

<tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
</tr>

<div>
    <%= f.submit "確認画面へ進む" %>
</div>
<% end %>