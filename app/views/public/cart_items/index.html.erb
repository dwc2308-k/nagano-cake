<div>ショッピングカート</div>
<%= link_to 'カートを空にする', public_cart_items_destroy_all_path, class: 'btn btn-danger' %>

<table class="table, table-bordered">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
    
<tbody>
 
<% @sum = 0 %>       
<%= @cart_items.each do |cart_item| %>
        
    <tr>
        <td>
            <%= image_tag cart_item.item.image, size: "50×50" %>
            <%= cart_item.item.name %>
        </td>
        <td>
            <%= cart_item.item.with_tax_price %>
        </td>
        <td>
            <%= form_with model:cart_item, url:public_cart_item_path(cart_item.id), local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit '変更', class: 'btn btn-success' %>
            <% end %>
        </td>
        <td>
            <%= cart_item.subtotal %>
        </td>
        <td>
            <%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete, 'data-confirm' => '商品を削除しますか？', class: 'btn btn-danger' %>
        </td>
    </tr>
    
<% end %>

</tbody>

</table>

<!-- 買い物を続けるボタンを押した後、トップページに遷移する。トップページをルートパスに指定してもらう。 -->


<table class="table, table-bordered">
    <tr>
        <th>合計金額</th>
        <th><%= @sum %></th>
    </tr>
</table>