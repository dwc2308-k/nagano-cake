<div class="container">
  <div class="row-8 my-3">
    <div class="col-lg-4 text-right">
<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
</div>
</div>


  <div class="row my-5">
   <div class="col-lg-7 mx-auto" style="width: 200px;">

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

<table class="table table-borderless">
    
        <tbody>
            <tr>
                <td>会員番号</td>
                <td><%= @customer.id %></td>
            </tr>
            <tr>
                <td>氏名</td>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
                <td>フリガナ</td>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
                <td>郵便番号</td>
                <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
                <td>住所</td>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <td>電話番号</td>
                <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
                <td>メールアドレス</td>
                <td><%= f.text_field :email %></td>
            </tr>
            <tr>
                <td>会員ステータス</td>
                <td>
                    <%= f.radio_button :is_deleted, :true, checked: true %>
                    <%= f.label :is_deleted, "有効" %>
                    <%= f.radio_button :is_deleted, :false %>
                    <%= f.label :is_deleted, "退会" %>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
            </tr>
        </tbody>
</table>
</div>
</div>
<% end %>

   </div>
