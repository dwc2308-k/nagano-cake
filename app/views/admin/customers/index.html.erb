<h2>会員一覧</h2>

<table class="table">
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
        <%= @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.last_name %><%= customer.first_name %>
                    <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                    <% if customer.is_deleted == '有効' %>
                        <%= customer.is_deleted_i18n %>
                    <% else %>
                        <%= customer.is_deleted_i18n %>
                    <% end %>
                </td>
                <%= paginate @customers %>
            </tr>
        <% end %>
    </thead>
</table>

