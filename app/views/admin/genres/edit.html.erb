<div class="container">
  <div class="row m-3">
    <div class="col-m-5">
   <h3 class="bg-light text-dark">ジャンル編集</h3>
   </div>
  </div>
    <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
            <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
    <% end %>
  </div>
<footer position=absolute></footer>