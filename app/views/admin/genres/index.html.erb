<div class="container">
  <div class="row m-3">
    <div class="col-m-5">
   <h3 class="bg-light text-dark">ジャンル一覧・追加</h3>
   </div>
  </div>
    <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
            <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
<div>
<table>
    <tr>
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
    <td><%= f.label :name, "ジャンル名" %></td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit '新規登録', class: 'btn btn-sm btn-success' %></td>
    <% end %>
    </tr>
</table>

    <table class="table col-lg-3">
        <thead>
            <tr class="p-3 mb-2 bg-success text-white">
                <th>ジャンル</th>
                <th></th>
            </tr>
        </thead>

    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
            </tr>
        <% end %>
    </tbody>

</table>
   </div>

<div class="col-lg-5 mx-auto" style="width: 200px;">
<%= paginate @genres %></div>
   </div>
