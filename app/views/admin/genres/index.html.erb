<h2>ジャンル一覧・追加</h2>
    <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
            <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
    <% end %>

    <table class="table">
        <thead>
            <tr>
                <th>ジャンル</th>
            </tr>
        </thead>
  
    <tbody>
        <%= @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>
