<div class="container">
  <div class="row">
    <div class="col-m-5">
   <h4>商品編集</h4>
   </div>
   
<%= form_with model: @item, url: admin_item_path do |f| %>

<div class="form-group">
<%= f.label :image, "商品画像" %>
<%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
<%= f.label :name, "商品名" %>
<%= f.text_field :name %>
</div>

<div class="form-group">
<%= f.label :description, "商品説明" %>
<%= f.text_area :description %>
</div>

<div class="form-group">
<%= f.label :name, "ジャンル" %>
<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
</div>

<div class="form-group">
<%= f.label :price_excluding_tax, "税抜金額" %>
<%= f.text_field :price_excluding_tax %>円
</div>

<div class="form-group">
<%= f.label :販売ステータス %>
<%= f.radio_button :is_active, true, checked: true %>
<%= f.label :is_active, "販売中" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売中止中" %>
</div>

<div class="form-group">
<%= f.submit '変更を保存', class: "btn btn-success" %>
</div>

<% end %>
