<div class="container">
  <div class="row-8 my-3">
    <div class="col-lg-4 text-right">
   <h4>商品新規登録</h4>
   </div>
   </div>


  <div class="row my-5">
   <div class="col-lg-5 mx-auto" style="width: 200px;">
<%= form_with model: @item, url: admin_items_path do |f| %>

<div class="form-group">
<%= f.label :image, "商品画像" %>
<%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
<%= f.label :name, "商品名" %>
<%= f.text_field :name %>
</div>

<div class="form-group">
<%= f.label :description, "商品説明" %>
<%= f.text_area :description %>
</div>

<div class="form-group">
<%= f.label :name, "ジャンル" %>
<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
</div>

<div class="form-group">
<%= f.label :price_excluding_tax, "税抜金額" %>
<%= f.text_field :price_excluding_tax %>円
</div>

<div class="form-group">
<%= f.label :販売ステータス %>
<%= f.radio_button :is_active, true, checked: true %>
<%= f.label :is_active, "販売中" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売中止中" %>
</div>

<div class="form-group">
<%= f.submit '新規登録', class: "btn btn-success" %>
</div>

<% end %>

 </div>
   </div>
    </div>