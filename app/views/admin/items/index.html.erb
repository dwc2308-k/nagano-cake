<h3>商品一覧</h3>

<h4>
<%= link_to new_admin_item_path do %>
<i class="fa-duotone fa-plus fa-fade" style="--fa-primary-color: #0a121f; --fa-secondary-color: #000000;"></i>
<% end %>
</h4>

<table class= "table">
<tr>
  <th>商品ID</th>
  <th>商品名</th>
  <th>税抜価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
</tr>

<% @items.each do |item| %>

<tr>
  <td>
    <%= item.id %>
  </td>

  <td>
    <%= link_to admin_item_path(item.id) do %>
    <%= item.name %>
    <% end %>
  </td>

  <td>
    <%= item.price_excluding_tax.to_s.reverse.scan(/.{1,3}/).join(',').reverse %>
  </td>

  <td>
    <%= item.genre.name %>
  </td>

  <td>
    <% if item.is_active == true %>
       販売中
    <% else %>
       販売停止中
    <% end %>
  </td>

</tr>
<% end %>
</table>

<%= paginate @items %>
