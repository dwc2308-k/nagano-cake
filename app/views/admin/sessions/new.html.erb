<div class="container">
  <div class="row my-3">
    <div class="col-sm-2 px-sm-0">
    <h4 class="bg-light text-dark">管理者 ログイン</h4>
    </div>
  </div>
    
    

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
    <%= f.label "メールアドレス" %>
    </div>
    <div class="col-sm-3 px-sm-0">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></br>
  　</div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
    <%= f.label "パスワード" %>
    </div>
    <div class="col-sm-3 px-sm-0">
    <%= f.password_field :password, autocomplete: "current-password" %></br>
  　</div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-4">
    <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>